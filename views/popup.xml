<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="pop">
            <style>
  .popup {
    display: none;
    z-index: 1000;
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background-color: #202f32;
    padding: 20px;
    border: 1px solid #ccc;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  }

  .popup-content {
    text-align: center;
  }

  #close-popup {
    padding: 10px 40px; /* Adjust padding for smaller screens */
    background-color: #d85e31;
    margin-left: 40.1%; /* Adjust margin for smaller screens */
    margin-top: 0px; /* Adjust margin for smaller screens */
    color: white;
    border: none;
    cursor: pointer;
  }
  .featured-services .description1 {
  font-family: DM Serif Display;
  font-size: 55px;
  font-weight: 800;
  line-height: 75px;
  letter-spacing: -0.02em;
  text-align: left;
  color: #202f32;
}

@media (max-width: 991px) {
  .featured-services .description1 {
    font-size: 25px;
    font-weight: 500;
    line-height: 1;
    letter-spacing: 0;
    text-align: center;
  }
}
  /* Responsive styles for smaller screens */
  @media (max-width: 768px) {
    .popup {
      padding: 10px; /* Adjust padding for smaller screens */
      width:87%;
    }

    #close-popup {
      margin-left: 31%; /* Adjust margin for smaller screens */
    }
  }
</style>

        <div class="popup" id="popup">
                            <div class="">
                               <section
        id="appointment"
        class="featured-services"
        style="background-color: #202f32"
      >
        <div class="container" data-aos="fade-up">
          <div class="section-title">
            <h4>
              <a
                style="
                  font-family: sans-serif;
                  font-size: 14px;
                  font-weight: 500;
                  line-height: 26px;
                  letter-spacing: 0.1em;
                  text-align: center;
                  color: #d85e31;
                "
                >BECOME A CLIENT</a
              >
            </h4>
            <p class="description1" style="color: white">
              Request an Intake Session
            </p>
          </div>
          <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

              <script>
              <![CDATA[
                function submitAppointmentForm(event) {
                  event.preventDefault();
                  const formData = new FormData();
                  let name = document.getElementById('name').value;
                  let number = document.getElementById('number').value;
                  let email = document.getElementById('email').value;
                  let doctor = document.getElementById('doctor').value;

                  var regex = /\b[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\.[A-Za-z]{2,7}\b/;
                  if (regex.test(email))
                  {
                    if (name && number && doctor)
                      {
                          document.getElementById('emailError').innerHTML = '';

                          formData.append('name', name)
                          formData.append('number', number)
                          formData.append('email', email)
                          formData.append('interested_in', doctor)
                          formData.append('provider', document.getElementById('providr').value)
                          formData.append('inPersonCheckbox', document.getElementById('inPersonCheckbox').checked)
                          formData.append('telehealthCheckbox', document.getElementById('telehealthCheckbox').checked)
                          formData.append('preferenceCheckbox', document.getElementById('preferenceCheckbox').checked)
                          $.ajax({
                            type: "POST",
                            url: '/create/lead',
                            contentType: false,
                            processData:false,
                            data: formData,
                          });
                          setTimeout(() => {
                            window.location.href='/thank-you';
                          }, 250)
                        }
                      }
                      else{
                        document.getElementById('emailError').innerHTML = 'Please enter a valid email address';
                        return false;
                      }

                }
              ]]>
            </script>

          <form id="myForm"
                method="post"
                role="form"
                data-aos="fade-up"
                data-aos-delay="1">

<!--                onsubmit="submitAppointmentForm(); return false;" -->
            <div class="d-flex justify-content-center flex-wrap">
              <div class="col-12 col-md-4 form-group input-color getHelp-res" style="padding-right: 13px">
                <input
                  type="text"
                  name="name"
                  class="form-control "
                  id="name"
                  placeholder="Full Legal Name"
                  required="1"
                  style="
                    background-color: #202f32;
                    border: 1px solid #d85e31;
                    color: white;
                  "
                />
              </div>
              <div class="col-12 col-md-4 form-group mt-3 mt-md-0 input-color">
                <input
                  type="text"
                  class="form-control"
                  name="number"
                  id="number"
                  placeholder="Phone Number"
                  required="1"
                  style="
                    background-color: #202f32;
                    border: 1px solid #d85e31;
                    color: white;
                  "
                />
              </div>
            </div>
            <div class="d-flex justify-content-center flex-wrap">
              <div class="col-12 col-md-8 form-group mt-3 mt-3 input-color">
                <input
                  type="email"
                  class="form-control"
                  name="phone"
                  id="email"
                  placeholder="Your Email"
                  required="1"
                  style="
                    background-color: #202f32;
                    border: 1px solid #d85e31;
                    color: white;
                  "
                />
